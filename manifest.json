  {
    "name": "TabFlush",
    "version": "1.0",
    "description": "Flush those tabs!",
    "permissions": ["activeTab", "storage", "declarativeContent"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "manifest_version": 2
  }